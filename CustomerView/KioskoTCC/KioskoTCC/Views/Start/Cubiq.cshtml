@{
    Layout = null;
}

<style>

    .measure-result {
        text-align: center !important;
        font-size:1.9em;
    }
</style>

<div class="cubiq" style="display:none">
    <div class="row justify-content-center text-center">
        <div style="position:absolute; left: 80px">
            <div class="col-sm-3">
                <a href="#" class="btn back-button" role="button" aria-disabled="true" style="float:left">
                    <i class="fas fa-backward"></i>
                </a>
            </div>
        </div>
        <div>
            <h2 class="step-title">CUBICACIÓN</h2>
            <hr style="width:100%" />
            <br />
        </div>
    </div>
    <form id="cubiq_form">
        <div class="row justify-content-center text-center">
            <div class="col-md-6 mt-3">
                <div class="card" >
                    <img id="current_cubiq_image" class="responsive" src="~/Assets/kiosko/img/default_box.png" />
                    <div class="card-body" style="background-color:#d52113;">
                        <div style="display: flex; justify-content: space-between">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mt-3">
                <div class="card" style="height:100%">
                    <img id="current_cubiq_image" style="height:100% !important" class="responsive" src="~/Assets/kiosko/img/Montar_Paquete.gif" alt="">
                    <div class="card-body" style="background-color:#d52113;">
                        <div style="display: flex; justify-content: space-between">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <label style="font-size:2.5em; color:#d52113;">Ubique su paquete en la báscula</label>
                <table>
                    <tr>
                        <td class="measure-result">ALTO</td>
                        <td class="measure-result">ANCHO</td>
                        <td class="measure-result">LARGO</td>
                        <td class="measure-result">VOLÚMEN</td>
                        <td class="measure-result">PESO</td>
                    </tr>
                    <tr>
                        <td class="measure-result" id="measure_height"></td>
                        <td class="measure-result" id="measure_width"></td>
                        <td class="measure-result" id="measure_length"></td>
                        <td class="measure-result" id="measure_volumetric_weight"></td>
                        <td class="measure-result" id="measure_weight"></td>
                    </tr>
                </table>
                <br />
                <a href="#" class="btn btn-get-measures mt-2" id="btn_get_measures" role="button" aria-disabled="true">
                    Presione aquí para tomar las medidas y peso
                </a>

                <div class="col-md-12 text-center" style="display:flex; justify-content:center;">
                    <button class="btn default-button get_measures_again btn_continue_measures" aria-disabled="true" style="font-size:30px; margin-right:10px; display:none; padding: 10px 10px;" type="button">TOMAR MEDIDAS NUEVAMENTE</button>
                    <button class="btn default-button cancel_shipping btn_continue_measures" style="font-size:30px; display:none; padding: 10px 10px; margin-right:10px; border: 2px solid white !important; background-image: linear-gradient(to right,#cacaca,#cacaca) !important;" type="button">CANCELAR ENVIO</button>
                    <button class="btn default-button continue-button btn_continue_measures" aria-disabled="true" style="font-size:30px; display:none; padding: 10px 10px;" type="button">CONTINUAR<i class="fas fa-arrow-right"></i></button>
                </div>

            </div>

        </div>
    </form>
</div>