@{
    Layout = null;
}

<div class="content" style="display:none">
    <div class="row justify-content-center text-center">
        <div style="position:absolute; left: 80px">
            <div class="col-sm-3">
                <a href="#" class="btn back-button" role="button" aria-disabled="true" style="float:left">
                    <i class="fas fa-backward"></i>
                </a>
            </div>
        </div>
        <div>
            <h2 class="step-title">INFORMACIÓN ADICIONAL</h2>
            <hr style="width:100%" />
        </div>
    </div>
    <form id="content_form">
        <div class="row justify-content-center text-center">
            <div class="col-md-6">
                <div class="form-group">
                    <h5 class="step-title"> Observaciones </h5>
                    <textarea style="height:150px !important;font-size:30px;" class="form-control input-xs " name="content_description" placeholder="" required></textarea>
                </div>
                <div class="form-group">
                    <h5 class="step-title"> Valor declarado</h5>
                    <input type="number" style="font-size:30px;" class="form-control input-xs input-onlynumber" id="content_value" name="content_value" placeholder="" required>
                </div>
                <div class="col-md-12 text-center mt-4 continue-and-cancel-button" style="display:flex; justify-content:center;">
                    <button class="btn default-button cancel_shipping" style="font-size:25px; padding: 10px 10px; border: 2px solid white !important; background-image: linear-gradient(to right,#cacaca,#cacaca) !important;" type="button">CANCELAR ENVIO</button>
                    <button class="btn default-button continue-button" aria-disabled="true" style="font-size:30px; padding: 10px 10px;" type="button">CONTINUAR<i class="fas fa-arrow-right"></i></button>
                </div>
            </div>
        </div>
    </form>
</div>