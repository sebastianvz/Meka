@{
    Layout = null;
}

<div class="receiver" style="display:none">
    <div class="row justify-content-center text-center">
        <div style="position:absolute; left: 80px">
                <div class="col-sm-3">
                    <a href="#" class="btn back-button" role="button" aria-disabled="true" style="float:left">
                        <i class="fas fa-backward"></i>
                    </a>
                </div>
        </div>
        <div>
            <h2 class="step-title">INFORMACIÓN DESTINATARIO</h2>
            <hr style="width:100%" />
        </div>
    </div>
    <form id="receiver_form">
        <div class="row justify-content-center text-center">
            <div class="col-md-7">
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <h5 class="step-title">TIPO</h5>
                        <select class="form-control input-xxxs" style="text-align-last:center;" name="receiver_identification_type" id="receiver_identification_type">
                            <option>CC</option>
                            <option>NIT</option>
                        </select>
                    </div>
                    <div class="form-group col-md-8">
                        <h5 class="step-title"> Identificación </h5>
                        <input type="number" class="form-control input-xxxs" name="receiver_identification_number" id="receiver_identification_number" placeholder="" required>
                    </div>
                </div>
                <div class="form-group">
                    <h5 class="step-title"> Nombre o razón social </h5>
                    <input type="text" class="form-control input-xs " name="receiver_name" id="receiver_name" placeholder="" required>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <h5 class="step-title">Departamento</h5>
                        <select class="form-control input-xxxs" style="text-align-last:center;" id="receiver_department" name="receiver_department">
                            <option selected disabled>Departamento</option>
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <h5 class="step-title">Ciudad</h5>
                        <select class="form-control input-xxxs" style="text-align-last:center;" id="receiver_city" name="receiver_city">
                            <option selected disabled>Ciudad</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <h5 class="step-title"> Dirección </h5>
                    <input type="text" class="form-control input-xxxs " name="receiver_address" id="receiver_address" placeholder="" required>

                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <h5 class="step-title"> Celular </h5>
                        <input type="number" isPhone=true class="form-control input-xxxs phone-number" name="receiver_phone" id="receiver_phone" placeholder="" required>
                    </div>
                    <div class="form-group col-md-6">
                        <h5 class="step-title"> Correo electrónico</h5>
                        <input type="email" class="form-control input-xs " name="receiver_email" id="receiver_email" placeholder="" required>

                    </div>
                </div>

                @*<a href="#" class="btn default-button mt-2 continue-button" role="button" aria-disabled="true">
            CONTINUAR <i class="fas fa-arrow-right"></i>
        </a>*@

                <div class="col-md-12 text-center mt-4 continue-and-cancel-button" style="display:flex; justify-content:center;">
                    <button class="btn default-button cancel_shipping" style="font-size:30px; padding: 10px 10px; border: 2px solid white !important; background-image: linear-gradient(to right,#cacaca,#cacaca) !important;" type="button">CANCELAR ENVIO</button>
                    <button class="btn default-button continue-button" aria-disabled="true" style="font-size:30px; padding: 10px 10px;" type="button">CONTINUAR<i class="fas fa-arrow-right"></i></button>
                </div>
            </div>
        </div>
    </form>
</div>